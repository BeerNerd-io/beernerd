{
  "name": "beernerd",
  "version": "1.0.0",
  "description": "Beer Nerd Labs PWA",
  "main": "src/js/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "mkdir -p public/js public/css",
    "build": "terser src/js/app.js -o public/js/app.min.js && cssnano src/css/styles.css > public/css/styles.min.css",
    "postbuild": "cp src/images/* public/images/ && cp src/manifest.json public/ && cp src/service-worker.js public/",
    "start": "live-server public --port=8080 --entry-file=index.html",
    "dev": "npm run build && npm start",
    "predeploy": "npm run build",
    "deploy": "npm run build && gh-pages -d public"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cssnano-cli": "^1.0.5",
    "gh-pages": "^3.2.3",
    "sharp": "^0.32.6",
    "terser": "^5.34.1"
  },
  "homepage": "https://beernerd-io.github.io/beernerd"
}
